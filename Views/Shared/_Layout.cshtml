        }

        .bottom-weather-item {
            text-align: center;
            padding: 8px 5px;
        }

        .bottom-weather-icon {
            font-size: 1.8rem;
            margin-bottom: 8px;
        }

        .bottom-clock-icon {
            font-size: 1.2rem;
            margin-bottom: 4px;
        }

        .bottom-weather-city {
            font-weight: bold;
            font-size: 0.7rem;
            color: #333;
            margin-bottom: 3px;
        }

        .bottom-weather-temp {
            color: #007bff;
            font-size: 0.8rem;
