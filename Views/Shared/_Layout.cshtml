    <script>
        let updateInterval;
        let currentWeatherData = null;
        let isFahrenheit = false;

        // Temperature conversion functions
        function celsiusToFahrenheit(celsius) {
            return (celsius * 9/5) + 32;
        }

        function fahrenheitToCelsius(fahrenheit) {
            return (fahrenheit - 32) * 5/9;
        }

        function formatTemperature(celsius, unit) {
            if (unit === 'F') {
                return `${Math.round(celsiusToFahrenheit(celsius))}¬∞F`;
            }
            return `${Math.round(celsius)}¬∞C`;
        }

        // Weather icons mapping
        const weatherIcons = {
            'clear': '‚òÄÔ∏è',
            'clouds': '‚òÅÔ∏è',
            'rain': 'üåßÔ∏è',
            'snow': '‚ùÑÔ∏è',
            'thunderstorm': '‚õàÔ∏è',
            'mist': 'üå´Ô∏è',
            'fog': 'üå´Ô∏è'
        };

        // Weather background classes mapping
        const weatherBackgrounds = {
            'clear': 'clear-sky',
            'clear sky': 'clear-sky',
            'few clouds': 'few-clouds',
            'scattered clouds': 'scattered-clouds',
            'broken clouds': 'broken-clouds',
            'shower rain': 'shower-rain',
            'rain': 'rain',
            'light rain': 'shower-rain',
            'heavy rain': 'rain',
            'moderate rain': 'rain',
            'thunderstorm': 'thunderstorm',
            'thunderstorms': 'thunderstorm',
            'snow': 'snow',
            'light snow': 'snow',
            'heavy snow': 'snow',
            'mist': 'mist',
            'fog': 'fog',
            'overcast clouds': 'broken-clouds',
            'smoke': 'mist',
            'haze': 'mist',
            'dust': 'mist',
            'sand': 'mist',
            'ash': 'mist',
            'squall': 'rain',
            'tornado': 'thunderstorm'
        };


        // Function to change background based on weather
        function changeWeatherBackground(weatherCondition) {
            // Background images are now replaced by rotating videos
            // This function is kept for compatibility but doesn't change backgrounds
            // Videos rotate independently every 5 hours
        }

        async function fetchWeather(location) {
            showLoading();
            try {
                const response = await fetch(`/api/weather/${encodeURIComponent(location)}`);
                const data = await response.json();
                
                if (response.ok) {
                    displayWeather(data);
                } else {
                    showError(data);
                }
            } catch (error) {
                showError('Network error. Please try again.');
            }
            hideLoading();
        }

        function displayWeather(data) {
            currentWeatherData = data;
            
            document.getElementById('location').textContent = `${data.name}, ${data.sys?.country || 'Unknown'}`;
            updateTemperatureDisplay();
            document.getElementById('condition').textContent = data.weather[0].description.toUpperCase();
            updateFeelsLikeDisplay();
            document.getElementById('humidity').textContent = `${data.main.humidity}%`;
            document.getElementById('pressure').textContent = `${data.main.pressure} hPa`;
            document.getElementById('windSpeed').textContent = `${data.wind.speed} m/s`;
            
            const icon = weatherIcons[data.weather[0].main.toLowerCase()] || 'üå§Ô∏è';
            document.getElementById('weatherIcon').textContent = icon;
            
            
            // Change background based on weather condition
            changeWeatherBackground(data.weather[0].description);
        }

        function updateTemperatureDisplay() {
            if (currentWeatherData) {
                document.getElementById('temperature').textContent = formatTemperature(currentWeatherData.main.temp, isFahrenheit ? 'F' : 'C');
            }
        }

        function updateFeelsLikeDisplay() {
            if (currentWeatherData) {
                document.getElementById('feelsLike').textContent = formatTemperature(currentWeatherData.main.feels_like, isFahrenheit ? 'F' : 'C');
            }
        }


        // Global weather locations
        const globalWeatherCities = {
            leftPanel: ['Atlanta', 'Sydney', 'Paris'],
            rightPanel: ['London', 'Dubai', 'Moscow'],
            bottomPanel: ['New York', 'Beijing', 'Berlin', 'Kuala Lumpur', 'Madrid', 'Amsterdam']
        };

        async function fetchAllWeatherData() {
            try {
                // Fetch weather for all locations
                const allCities = [...globalWeatherCities.leftPanel, ...globalWeatherCities.rightPanel, ...globalWeatherCities.bottomPanel];
                const weatherData = await Promise.all(allCities.map(city => fetchWeatherForCity(city)));
                
                updateGlobalWeatherDisplays(weatherData);
            } catch (error) {
                console.error('Error fetching global weather:', error);
            }
        }

        async function fetchWeatherForCity(cityName) {
            try {
                const response = await fetch(`/api/weather/${encodeURIComponent(cityName)}`);
                const data = await response.json();
                return { ...data, cityName, originalName: cityName };
            } catch (error) {
                return { 
                    cityName, 
                    originalName: cityName,
                    error: error.message,
                    main: { temp: 0 },
                    weather: [{ main: 'N/A', description: 'Error' }]
                };
            }
        }

        function updateGlobalWeatherDisplays(allWeatherData) {
            // Update global weather section (4x2 grid)
            updateGlobalWeatherSection(allWeatherData.slice(0, 8));
            
            // Update side panels
            updateSidePanel('leftWeather', globalWeatherCities.leftPanel, allWeatherData);
            updateSidePanel('rightWeather', globalWeatherCities.rightPanel, allWeatherData);
            
            // Update bottom panel
            updateBottomPanel(allWeatherData.filter(data => globalWeatherCities.bottomPanel.includes(data.originalName)));
        }

        function updateGlobalWeatherSection(weatherData) {
           const container = document.getElementById('globalWeather');
           let html = '';
           
           weatherData.forEach(weather => {
               if (!weather.error) {
                   html += `
                       <div class="col-md-6 col-lg-3 mb-3">
                           <div class="weather-detail text-center">
                               <div class="weather-mini-icon mb-2">${getWeatherIcon(weather.weather[0].main)}</div>
                               <div class="fw-bold text-primary">${weather.cityName}</div>
                               <div class="weather-mini-temp text-secondary">${formatTemperature(weather.main.temp, isFahrenheit ? 'F' : 'C')}</div>
                               <div class="weather-mini-condition text-muted">${weather.weather[0].description}</div>
                           </div>
                       </div>
                   `;
               }
           });
           
           container.innerHTML = html;
        }

        function updateSidePanel(panelId, cities, allWeatherData) {
            const panel = document.getElementById(panelId);
            let html = '';
            
            cities.forEach(city => {
                const weather = allWeatherData.find(data => data.originalName === city && !data.error);
                if (weather) {
                    html += `
                        <div class="side-weather-item">
                            <div class="side-weather-icon">${getWeatherIcon(weather.weather[0].main)}</div>
                            <div class="side-weather-city">${weather.cityName}</div>
                            <div class="side-weather-temp">${formatTemperature(weather.main.temp, isFahrenheit ? 'F' : 'C')}</div>
                            <div class="side-weather-condition">${weather.weather[0].description}</div>
                        </div>
                    `;
                } else {
                    html += `
                        <div class="side-weather-item">
                            <div class="side-weather-icon">üå§Ô∏è</div>
                            <div class="side-weather-city">${city}</div>
                            <div class="side-weather-temp">-- ¬∞</div>
                            <div class="side-weather-condition">Error</div>
                        </div>
                    `;
                }
            });
            
            panel.innerHTML = html;
        }

        function updateBottomPanel(allWeatherData) {
            const panel = document.getElementById('bottomWeather');
            let html = '';
            
            const cities = globalWeatherCities.bottomPanel;
            cities.forEach(city => {
                const timeString = getWorldTime(city);
                html += `
                    <div class="col-md-2 col-lg-2">
                        <div class="bottom-weather-item">
                            <div class="bottom-clock-icon">üïê</div>
                            <div class="bottom-weather-city">${city}</div>
                            <div class="bottom-clock-time">${timeString}</div>
                            <div class="bottom-weather-condition">${getTimeZone(city)}</div>
                        </div>
                    </div>
                `;
            });
            
            panel.innerHTML = html;
        }

        function getWorldTime(cityName) {
            const timeZones = {
                'New York': 'America/New_York',
                'Beijing': 'Asia/Shanghai',
                'Berlin': 'Europe/Berlin',
                'Kuala Lumpur': 'Asia/Kuala_Lumpur',
                'Madrid': 'Europe/Madrid',
                'Amsterdam': 'Europe/Amsterdam'
            };
            
            const timeZone = timeZones[cityName];
            if (!timeZone) return '--:--';
            
            const now = new Date();
            const timeString = now.toLocaleTimeString('en-US', {
                timeZone: timeZone,
                hour12: true,
                hour: '2-digit',
                minute: '2-digit'
            });
            
            return timeString;
        }

        function getTimeZone(cityName) {
            const zones = {
                'New York': 'EST/EDT',
                'Beijing': 'CST/CDT',
                'Berlin': 'CEST',
                'Kuala Lumpur': 'MST',
                'Madrid': 'CEST',
                'Amsterdam': 'CEST'
            };
            return zones[cityName] || 'Local';
        }

        function getWeatherIcon(weatherMain) {
            const icons = {
                'clear': '‚òÄÔ∏è',
                'clouds': '‚òÅÔ∏è',
                'rain': 'üåßÔ∏è',
                'snow': '‚ùÑÔ∏è',
                'thunderstorm': '‚õàÔ∏è',
                'mist': 'üå´Ô∏è',
                'fog': 'üå´Ô∏è'
            };
            return icons[weatherMain.toLowerCase()] || 'üå§Ô∏è';
        }

        function showLoading() {
            document.getElementById('weatherCard').style.display = 'none';
            document.getElementById('loading').style.display = 'block';
        }

        function hideLoading() {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('weatherCard').style.display = 'block';
        }

        function showError(message) {
            document.getElementById('location').textContent = 'Error';
            document.getElementById('temperature').textContent = '--¬∞C';
            document.getElementById('condition').textContent = message;
            alert(message);
        }


        // Event listeners
        document.getElementById('searchBtn').addEventListener('click', () => {
            const location = document.getElementById('searchInput').value.trim();
            if (location) {
                fetchWeather(location);
            }
        });

        document.getElementById('searchInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                document.getElementById('searchBtn').click();
            }
        });

        // Temperature unit toggle event listener
        document.getElementById('tempUnitToggle').addEventListener('change', () => {
            isFahrenheit = document.getElementById('tempUnitToggle').checked;
            updateTemperatureDisplay();
            updateFeelsLikeDisplay();
            
            // Update all global weather displays
            fetchAllWeatherData();
        });

        // Update world clocks every second
        function startClockUpdates() {
            updateWorldClocks();
            setInterval(updateWorldClocks, 1000);
        }

        function updateWorldClocks() {
            const cities = globalWeatherCities.bottomPanel;
            cities.forEach((city, index) => {
                const timeElement = document.querySelector(`.bottom-clock-time:nth-child(${index + 3})`);
                if (timeElement) {
                    timeElement.textContent = getWorldTime(city);
                }
            });
        }

        // Video rotation system
        const videoFiles = [
            '/videos/video1.mp4',
            '/videos/Video2.mp4', 
            '/videos/Video3.mp4',
            '/videos/video4.mp4',
            '/videos/video5.mp4'
        ];

        let currentVideoIndex = 0;

        function rotateBackgroundVideo() {
            const videoElement = document.getElementById('backgroundVideo');
            
            // Fade out current video
            videoElement.classList.add('fade-out');
            
            setTimeout(() => {
                // Move to next video
                currentVideoIndex = (currentVideoIndex + 1) % videoFiles.length;
                
                // Update video source
                const source = videoElement.querySelector('source');
                source.src = videoFiles[currentVideoIndex];
                videoElement.load();
                
                // Play the new video
                videoElement.play().catch(e => console.log('Video autoplay prevented:', e));
                
                // Fade in new video
                videoElement.classList.remove('fade-out');
                videoElement.classList.add('fade-in');
                
                setTimeout(() => {
                    videoElement.classList.remove('fade-in');
                }, 1000);
            }, 1500);
        }

        function startVideoRotation() {
            // Rotate every 5 hours (5 * 60 * 60 * 1000 milliseconds)
            const fiveHoursInMs = 5 * 60 * 60 * 1000;
            
            // For testing: rotate every 30 seconds instead of 5 hours
            // const testIntervalMs = 30 * 1000; // Uncomment this line and comment out the line below for testing
            
            // Initial random start to avoid predictable rotation
            const randomDelay = Math.random() * 10000; // Random delay up to 10 seconds
            
            setTimeout(() => {
                rotateBackgroundVideo();
                
                // Set interval for regular rotation (change to testIntervalMs for testing)
                setInterval(rotateBackgroundVideo, fiveHoursInMs);
            }, randomDelay);
        }

        // Initialize the app
        document.addEventListener('DOMContentLoaded', () => {
            fetchWeather('90210'); // Default location
            fetchAllWeatherData(); // Load global weather
            startClockUpdates(); // Start world clock updates
            startVideoRotation(); // Start video rotation
        });
    </script>
