            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }

        .side-weather-panel {
            position: absolute;
            top: 20%;
            width: 200px;
            height: 60%;
        }

        .left-panel {
            left: 20px;
        }

        .right-panel {
            right: 20px;
        }

        .side-weather {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 15px;
